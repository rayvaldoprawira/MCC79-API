    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a href="Employee/Create" class="btn btn-outline-dark">Create New</a>
</p>
<table class="table  table-striped table-hover border-3 border-dark">
    <thead class="table-dark border-3 border-dark">
        <tr>
@*            <th>
                @Html.DisplayNameFor(model => model.Guid)
