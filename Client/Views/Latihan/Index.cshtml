<h1 id="judul">List Pokemon</h1>
<table class="table    table-striped table-hover" id="myTabel">
    <thead class="table-dark">
        <tr>
            <th>No</th>
            <th>Nama</th>
            <th>URL</th>
            <th>Detail</th>
        </tr>
    </thead>
    <tbody id="tbody">
    </tbody>
</table>

<div class="modal" tabindex="-1" id="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body row">
                <div class="col-md-6">
                    <div class="card" style="width: 23rem;">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="" class="d-block w-100" alt="..." id="firstimg">
                                </div>
                                <div class="carousel-item">
                                    <img src="" class="d-block w-100" alt="..." id="secimg">
                                </div>
                                <div class="carousel-item">
                                    <img src="" class="d-block w-100" alt="..." id="thirdimg">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                        <div class="card-body" id="cardbody">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item" id="listpoke">An item</li>
                            <li class="list-group-item" id="listpoke1"></li>
                            <li class="list-group-item" id="listpoke2"></li>

                        </ul>

                    </div>
                </div>

                <div class="col-md-6">
                    <ul class="nav nav-tabs" id="myTabs">
                        <li class="nav-item">
                            <a class="nav-link active" id="tab1" data-bs-toggle="tab" href="#content1">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tab2" data-bs-toggle="tab" href="#content2">Stats</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="content1" class="tab-pane fade show active">
                            <h3 class="mt-2" id="title">Content 1</h3>
                            <p></p>
                            <ul>
                                <li class="list-group-item" id="listpoke3"></li>
                            </ul>
                        </div>
                    <div id="content2" class="tab-pane fade">
                        <h3 class="mt-2">STATS</h3>
                        <div class="progress">
                            <div id="hp" class="progress-bar bg-success" role="progressbar" style="width: 0%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="255">
                                <span id="progress-text" class="progress-text">0 kg</span>
                            </div>
                            </div>
                            <div class="progress mt-2">
                            <div id="attack" class="progress-bar bg-danger" role="progressbar" style="width: 0%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="255">
                                    <span id="progress-text" class="progress-text">0 kg</span>
                                </div>
                                </div>
                                <div class="progress mt-2">
                                    <div id="defense" class="progress-bar" role="progressbar" style="width: 0%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="255">
                                        <span id="progress-text" class="progress-text">0 kg</span>
                                    </div>
                                    </div>
                                    <div class="progress mt-2">
                            <div id="special-attack" class="progress-bar  bg-danger" role="progressbar" style="width: 0%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="255">
                                            <span id="progress-text" class="progress-text">0 kg</span>
                                        </div>
                                        </div>
                                        <div class="progress mt-2">
                            <div id="special-defense" class="progress-bar bg-info" role="progressbar" style="width: 0%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="255">
                                                <span id="progress-text" class="progress-text">0 kg</span>
                                            </div>
                                            </div>
                                            <div class="progress mt-2">
                            <div id="speed" class="progress-bar bg-warning" role="progressbar" style="width: 0%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="255">
                                                    <span id="progress-text" class="progress-text">0 kg</span>
                                                </div>
                                            </div>
                    </div>

                </div>


            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



